<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">GeoJSON Imports</h1>
    <%= link_to 'Upload New GeoJSON', new_geojson_import_path, 
        class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <div class="bg-white shadow overflow-hidden rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Uploaded</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">File</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @imports.each do |import| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
              <%= import.display_name %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= time_ago_in_words(import.created_at) %> ago
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= link_to import.file.filename, rails_blob_path(import.file, disposition: "attachment"), 
                  class: "text-blue-600 hover:text-blue-900" if import.file.attached? %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div> 